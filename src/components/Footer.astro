<style>
	footer {
		padding: 3em 2em;
		background: rgba(255, 255, 255, 0.6);
		border-top: 1px solid rgba(var(--gray-light), 0.8);
		color: rgb(var(--gray));
		text-align: center;
		margin-top: 4em;
	}
	.social-links {
		display: flex;
		justify-content: center;
		gap: 0.5em;
		margin-top: 1.5em;
	}
	.social-links a {
		text-decoration: none;
		color: rgb(var(--gray));
		padding: 0.5em;
		border-radius: 6px;
		transition: all 0.2s ease;
		display: flex;
		align-items: center;
		justify-content: center;
	}
	.social-links a:hover {
		color: var(--accent);
		background: rgba(var(--gray-light), 0.5);
		transform: translateY(-2px);
	}
</style>
